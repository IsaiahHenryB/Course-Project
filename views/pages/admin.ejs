<%- include('../partials/head') -%> 
<%- include('../partials/navbar') -%> 

    
    <div class="content-box">

    <h1>ADMIN PAGE</h1>

    <div class="admintab">
        <div class="add-button"><a href="/admin-console/create-book"><button>ADD NEW COMIC</button></a></div>
        <table class="book-table">
            
            <thead>
            <tr>
                <th><p>COMIC TITLE</p></th>
                <th><p>EDIT</p></th>
                <th><p>DELETE</p></th>
            </tr>
            </thead>

            <tbody>
                <% books.forEach( book => { %>
                    <tr>
                        <td><%= book.title %></td>
                        <td>
                        <a href="/admin-console/update-book/<%= book._id %>"><button>EDIT</button></a>
                        </td>
                        <td>
                            <form action="/book/<%= book._id %>?_method=DELETE" method="POST">
                            <button type="submit">DELETE</button>
                        </form>
                    </td>
                    </tr>
                <% }); %>
            
        </tbody>
        </table>
    </div>
</div>
<%- include('../partials/footer') -%>     